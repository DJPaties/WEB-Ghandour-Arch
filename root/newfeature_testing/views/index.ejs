<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="../public/style.css">

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Gallery</title>
</head>
<body>
    <h1>Image Gallery</h1>
    <div class="image-form-div">
    <form id="image-form" enctype="multipart/form-data" action="/upload" method="post">
        <input type="file" name="image" accept="image/*" id="image-input">
        <br>
        <input type="text" name="description" placeholder="Description">
        <br>
        <button type="submit">Add Photo</button>
        <br>
        <p id="selected-photo-text"></p>
    </form>
</div>
    
    <hr>
    <div id="image-gallery">
        <% images.forEach(image => { %>
            <div>
                <img src="/uploads/<%= image.filename %>" alt="Image <%= image.id %>">
                <p><%= image.description %></p>
            </div>
        <% }); %>
    </div>
    
    <script src="/newfeature_testing/public/script.js"></script>
</body>
</html>
